<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>CriticR</title>
    <script
       src="https://code.jquery.com/jquery-3.3.1.min.js"
       integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
       crossorigin="anonymous">
    </script>
 <link rel="stylesheet" type="text/css" href="/css/main.css" />
  </head>
  <body class="HolyGrail">
    <div class="header">
      <!-- title //not used on main index page\\-->
      <div class="header-title">
        <!-- <a href="/"><h5>CriticR</h5></a> -->
      </div>
      <!-- navigation -->
      <div class="header-nav">
        <ul>
          <%if(!user) { %>
            <!-- add your link to the log in page here -->
            <li>
              <a href="/sessions/new">Log In</a>
            </li>
            <!-- add your link to create a user here -->
            <li>
              <a href="/users/new">Register to Review</a>
            </li>
          <% } else { %>
          <%if (user.super == true) { %>
            <li>
                <a href="/media/new">Add Movie/Game</a>
            </li>
          <% } %>
          <li>
            <a href="/users/user/<%=user._id%>">View My Reviews</a>
          </li>
          <!-- log out -->
          <li>
            <form action="/sessions?_method=DELETE" method="POST">
              <input type="submit" value="Log Off" />
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
    <h1>CriticR</h1>
    <h3>Reviews By The People, For The People</h3>
    <div class="HolyGrail-body">

      <div class="HolyGrail-content">
        <div id="frontNav">
          <a href="#" id="mFilter">Movies</a>
          <a href="#" id="gFilter">Games</a>
        </div>

        <div id="lineAside">
          <main id="mLineUp" class="lineUps on">

              <%for (let i = 0; i < movies.length; i++) { %>
                <div class="viewWind on">

                  <div class="vIm">
                    <a href="#">
                    <img src=<%=movies[i].poster%>>
                    </a>
                  </div>
                  <div class="dIm">
                    <p>Title: <%=movies[i].title%></p>
                    <p>Studio/Production:  <%=movies[i].pub%></p>
                    <p>Genre: <%=movies[i].genre%></p>
                    <a href="/media/<%=movies[i]._id%>"><p>Check Reviews</p></a>
                  </div>
                  <div class="scoreBox">
                    <h1 id="hScore"><%if(!movies[i].score) { %>
                      <h1>N/A</h1>
                      <h4>Not Yet Reviewed</h4>
                    <% } else { %>
                    <%=movies[i].score.toFixed(2)%></h1>
                    <div class="revCountIndicate">
                      Out of <%=movies[i].reviews.length%> review(s)
                    </div>
                    <% } %>
                    <a href="/reviews/new/<%=movies[i]._id%>">Review This Movie</a>
                  </div>

                </div>
              <% } %>

          </main>
          <main id="gLineUp" class="lineUps off">

            <%for (let i = 0; i < games.length; i++) { %>
              <div class="viewWind on">

                <div class="vIm">
                  <a href="#">
                  <img src=<%=games[i].poster%>>
                  </a>
                </div>
                <div class="dIm">
                  <p>Title: <%=games[i].title%></p>
                  <p>Developer: <%=games[i].pub%></p>
                  <p>Genre: <%=games[i].genre%></p>
                  <a href="/media/<%=games[i]._id%>"><p>Check out Reviews</p></a>
                </div>
                <div class="scoreBox">
                  <%if(!games[i].score) { %>
                    <h1 id="hScore">N/A</h1>
                    <h4>Not Yet Reviewed</h4>
                  <% } else { %>
                  <h1 id="hScore"><%=games[i].score.toFixed(2)%></h1>
                  <div class="revCountIndicate">
                    Out of <%=games[i].reviews.length%> review(s)
                  </div>
                  <% } %>
                  <a href="/reviews/new/<%=games[i]._id%>">Review this Game</a>
                </div>

              </div>
            <% } %>

          </main>

          <aside class="HolyGrail-ads">
            <a href="/reviews/new" id="newRevLink">+ --- Add Review</a>
          </aside>

        </div>
        </div>
    </div>
    <footer>â€¦</footer>
  </body>
  <script>
    $('#mFilter').click(function () {
      $('#gLineUp').removeClass('on').addClass('off');
      $('#mLineUp').removeClass('off').addClass('on');
    });
    $('#gFilter').click(function () {
      $('#gLineUp').removeClass('off').addClass('on');
      $('#mLineUp').removeClass('on').addClass('off');
    });
</script>
</html>
