<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>CriticR</title>
    <script
       src="https://code.jquery.com/jquery-3.3.1.min.js"
       integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
       crossorigin="anonymous">
    </script>
 <link rel="stylesheet" type="text/css" href="/css/main.css" />
  </head>
  <body class="HolyGrail">
    <div class="header">
      <!-- title //not used on main index page\\-->
      <div class="header-title">
        <!-- <a href="/"><h5>CriticR</h5></a> -->
      </div>
      <!-- navigation -->
      <div class="header-nav">
        <ul>
          <%if(!user) { %>
          <!-- add your link to the log in page here -->
          <li>
            <a href="/sessions/new">Log In</a>
          </li>
          <!-- add your link to create a user here -->
          <li>
            <a href="/users/new">Register to Review</a>
          </li>
          <% } else { %>
          <li>
              <a href="/reviews/new">Add Review</a>
          </li>
          <!-- log out -->
          <li>
            <form action="/sessions?_method=DELETE" method="POST">
              <input type="submit" value="Log Off" />
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
    <h1>CriticR</h1>
    <h3>Reviews By The People, For The People</h3>
    <div class="HolyGrail-body">

      <div class="HolyGrail-content">
        <div id="frontNav">
          <a href="#" id="mFilter">Movies</a>
          <a href="#" id="gFilter">Games</a>
        </div>

        <div id="lineAside">
          <main id="mLineUp" class="lineUps on">

              <%for (let i = 0; i < mReviews.length; i++) { %>
                <div class="viewWind on">

                  <div class="vIm">
                    <a href="#">
                    <img src=<%=mReviews[i].images[0]%>>
                    </a>
                  </div>
                  <div class="dIm">
                    <p>Title: <%=mReviews[i].title%></p>
                    <p>Studio/Production:  <%=mReviews[i].pub%></p>
                    <p>Genre: <%=mReviews[i].genre%></p>
                    <p>Critic: <%=mReviews[i].username%></p>
                    <a href="/reviews/review/<%=mReviews[i]._id%>"><p>Read</p></a>
                  </div>
                  <div class="scoreBox">
                    <h1 id="hScore"><%=mReviews[i].score[4]%></h1>
                  </div>

                </div>
              <% } %>

          </main>
          <main id="gLineUp" class="lineUps off">

            <%for (let i = 0; i < gReviews.length; i++) { %>
              <div class="viewWind on">

                <div class="vIm">
                  <a href="#">
                  <img src=<%=gReviews[i].images[0]%>>
                  </a>
                </div>
                <div class="dIm">
                  <p>Title: <%=gReviews[i].title%></p>
                  <p>Developer: <%=gReviews[i].pub%></p>
                  <p>Genre: <%=gReviews[i].genre%></p>
                  <p>Critic: <%=gReviews[i].username%></p>
                  <a href="/reviews/review/<%=gReviews[i]._id%>"><p>Read</p></a>
                </div>
                <div class="scoreBox">
                  <h1 id="hScore"><%=gReviews[i].score[4]%></h1>
                </div>

              </div>
            <% } %>

          </main>

          <aside class="HolyGrail-ads">
            <a href="/reviews/new" id="newRevLink">+ --- Add Review</a>
          </aside>

        </div>
        </div>
    </div>
    <footer>â€¦</footer>
  </body>
  <script>
    $('#mFilter').click(function () {
      $('#gLineUp').removeClass('on').addClass('off');
      $('#mLineUp').removeClass('off').addClass('on');
    });
    $('#gFilter').click(function () {
      $('#gLineUp').removeClass('off').addClass('on');
      $('#mLineUp').removeClass('on').addClass('off');
    });
</script>
</html>
